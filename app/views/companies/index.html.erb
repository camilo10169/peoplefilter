<h1>Listing companies</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Area</th>
      <th>Address</th>
      <th>Zip code</th>
      <th>Phone</th>
      <th>Fax</th>
      <th>Country</th>
      <th>Department</th>
      <th>City</th>
      <th>Nit</th>
      <th>Website</th>
      <th>Description</th>
      <th>Amount employees</th>
      <th>Logo</th>
      <th>User</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @companies.each do |company| %>
      <tr>
        <td><%= company.name %></td>
        <td><%= company.area %></td>
        <td><%= company.address %></td>
        <td><%= company.zip_code %></td>
        <td><%= company.phone %></td>
        <td><%= company.fax %></td>
        <td><%= company.country %></td>
        <td><%= company.department %></td>
        <td><%= company.city %></td>
        <td><%= company.nit %></td>
        <td><%= company.website %></td>
        <td><%= company.description %></td>
        <td><%= company.amount_employees %></td>
        <td><%= company.logo %></td>
        <td><%= company.user %></td>
        <td><%= link_to 'Show', company %></td>
        <td><%= link_to 'Edit', edit_company_path(company) %></td>
        <td><%= link_to 'Destroy', company, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

